<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Autores</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Lista de Autores</h1>
        <table>
            <thead>
                <tr>
                    <th>Identificación</th>
                    <th>Nombre</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Nacionalidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each autores}}
                <tr>
                    <td>{{this.identificacion}}</td>
                    <td>{{this.nombre}}</td>
                    <td>{{this.fecha_nacimiento}}</td>
                    <td>{{this.nacionalidad}}</td>
                    <td>
                        <form action="/autores/editar/{{this._id}}" method="get">
                            <button type="submit">Editar</button>
                        </form>
                        <form action="/autores/eliminar/{{this._id}}" method="post">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <a href="/autores/nuevo" class="button">Añadir Nuevo Autor</a>
            <a href="/" class="button">Ir al Inicio</a>
    </div>
</body>
</html>
